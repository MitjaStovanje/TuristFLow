                    </StackPanel>
                </DataTemplate>
            </HubSection>
            <HubSection x:Uid="HubSection2" Header="Companions" MinWidth="361">
                <DataTemplate>
                    <StackPanel VerticalAlignment="Center" Height="526">
                        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </StackPanel>
                </DataTemplate>
            </HubSection>
            <HubSection x:Uid="HubSection2" Header="Companions" MinWidth="361">
                <DataTemplate>
                    <StackPanel VerticalAlignment="Center" Height="526">
                        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </StackPanel>
                </DataTemplate>
            </HubSection>
       
        <HubSection x:Uid="HubSection2" Header="Companions" MinWidth="361">
            <DataTemplate>
                <StackPanel VerticalAlignment="Center" Height="526">
                    <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </StackPanel>
            </DataTemplate>
        </HubSection>
       
        <HubSection x:Uid="HubSection2" Header="Companions" MinWidth="361">
            <DataTemplate>
                <StackPanel VerticalAlignment="Center" Height="526">
                    <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </StackPanel>
            </DataTemplate>
        </HubSection>
        </Hub>


    </Grid>
</Page>
